@{
    Layout = "~/Views/Shared/ontap.cshtml";
}
@model Ontap.Models.Product

<div class="container">
    <h2>Create Product</h2>
    <form asp-action="ThemSanPham" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Id" class="control-label col-sm-2">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2">Product Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice" class="control-label col-sm-2">Unit Price</label>
            <div class="col-sm-10">
                <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="control-label col-sm-2">Image URL</label>
            <div class="col-sm-10">
                <input asp-for="Image" class="form-control" type="text" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Available" class="control-label col-sm-2">Available</label>
            <div class="col-sm-10">
                <input asp-for="Available" class="form-control" type="checkbox" />
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label col-sm-2">Category</label>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in ViewData["Categories"] as List<Ontap.Models.Category>)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label col-sm-2">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create Product</button>
            </div>
        </div>
    </form>
</div>
